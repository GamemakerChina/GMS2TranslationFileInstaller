<Page x:Class="GMS2GiMiSi.View.GMS2ChildPage.IDEPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GMS2GiMiSi.View.GMS2ChildPage"
      mc:Ignorable="d"
      Title="IDEPage" Width="550" Height="340">

    <Grid>
        <Grid>
            <TextBlock Grid.Column="0" x:Name="LabelInstalldir" Height="16" Margin="10,10,43,0" TextWrapping="Wrap" Text="GameMaker Studio 2 安装路径" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
            <TextBox Style="{StaticResource TextBoxStyle}" Grid.Column="0" x:Name="TextInstallDir" Height="18" Margin="10,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False" TextChanged="TextInstallDir_Changed" HorizontalAlignment="Left" Width="401"/>
            <Button Style="{StaticResource BtnInfoStyle}" Grid.Column="1" x:Name ="BtnInstallDirBrowse" Content="浏览……" Height="18" Margin="380.3,31,0,0" VerticalAlignment="Top" Click="BtnInstallDir_Click" HorizontalAlignment="Left" Width="50"/>
            <CheckBox Style="{StaticResource CheckBoxStyle}" Grid.Column="0" x:Name="CheckBoxAutoSearch" Content="自动查找"  Height="20" Margin="10,54,0,0" Checked="ChBoxAutoSearch_Checked" Unchecked="ChBoxAutoSearch_Unchecked" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90"/>
            <TextBlock Grid.Column="1" x:Name="TextGMS2Verion" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="74.3,55,0,0" Height="18"/>
            <Button Style="{StaticResource BtnInfoStyle}" Grid.Column="0" x:Name="BtnInstallCHN" Content="安装汉化界面文件&#xA;（CHN）" Height="130" Margin="10,77,0,0" VerticalAlignment="Top" FontSize="18" Click="BtnInstallCHN_Click" HorizontalAlignment="Left" Width="233" IsEnabled="False"/>
            <Button Style="{StaticResource BtnInfoStyle}" Grid.Column="1" x:Name="BtnManualCHN" Content="浏览中文帮助文档&#xA; （未完全翻译，完成后&#xA;将可以内置进GMS2）" Height="75" Margin="212.3,77,0,0" VerticalAlignment="Top" Click="BtnManualCHN_Click" FontSize="18" HorizontalAlignment="Left" Width="218"/>
            <Button Style="{StaticResource BtnInfoStyle}" Grid.Column="1" x:Name="BtnManualENG" Content="浏览英文官方帮助文档" Height="50" Margin="212.3,157,0,0" VerticalAlignment="Top" Click="BtnManualENG_Click" FontSize="18" HorizontalAlignment="Left" Width="218"/>
        </Grid>
    </Grid>
</Page>
